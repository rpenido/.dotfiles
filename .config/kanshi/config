profile default {
  output eDP-1 enable scale 2
  exec pkill -SIGUSR1 qtile
}

profile docked {
  output DP-4 mode 2560x1440
  output eDP-1 disable
  exec pkill -SIGUSR1 qtile
}

profile eGPU-1 {
  output DP-2 mode 2560x1440
  output eDP-1 disable
  exec pkill -SIGUSR1 qtile
}

profile eGPU-2 {
  output HDMI-A-2 mode 2560x1440 scale 1.1
  output eDP-1 disable
  exec pkill -SIGUSR1 qtile
}

profile eGPU-3 {
  output DP-6 mode 2560x1440 scale 1
  output eDP-1 disable
  exec pkill -SIGUSR1 qtile
}
